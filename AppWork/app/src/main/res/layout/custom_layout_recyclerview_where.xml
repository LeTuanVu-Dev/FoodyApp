<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardViewOdau"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_3sdp"
            >
            <TextView
                android:id="@+id/txtTongdiemquanan"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:text="0"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/background_cycler"
                />

            <LinearLayout
                android:paddingStart="@dimen/_7sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/txtTenQuanAnOdau"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gogi House"
                    android:textStyle="bold"
                    android:textSize="@dimen/_16sdp"
                    />

                <TextView
                    android:id="@+id/txtDiaChiQuanAnOdau"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="36 Triệu Quang Phục Quận 3"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/txtKhoangCachQuanAnOdau"
                android:paddingStart="@dimen/_5sdp"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:text="6.6 km"
                android:gravity="bottom"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageHinhQuanAnOdau"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/hinhtest"
            />

        <ImageButton
            android:id="@+id/btnDatMonOdau"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/shipper"
            />

        <LinearLayout
            android:id="@+id/containerBinhLuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_3sdp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageUser"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/icon_user"
                android:layout_margin="@dimen/_3sdp"
                />

            <LinearLayout
                android:paddingStart="@dimen/_7sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/txtTieudebinhluan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gogi House"
                    android:textStyle="bold"
                    android:textSize="@dimen/_16sdp"
                    />

                <TextView
                    android:id="@+id/txtNoidungbinhluan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="36 Triệu Quang Phục Quận 3"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/txtChamdiem"
                android:paddingStart="@dimen/_5sdp"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:text="7.0"
                android:gravity="end"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/containerBinhLuan2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_3sdp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageUser2"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/icon_user"
                android:layout_margin="@dimen/_3sdp"
                />

            <LinearLayout
                android:paddingStart="@dimen/_7sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/txtTieudebinhluan2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gogi House"
                    android:textStyle="bold"
                    android:textSize="@dimen/_16sdp"
                    />

                <TextView
                    android:id="@+id/txtNoidungbinhluan2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="36 Triệu Quang Phục Quận 3"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/txtChamdiem2"
                android:paddingStart="@dimen/_5sdp"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:text="7.0"
                android:gravity="end"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_40sdp"
            >
            <TextView
                android:id="@+id/txtTongBinhLuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="153"
                android:gravity="center"
                android:drawablePadding="@dimen/_3sdp"
                android:layout_margin="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                app:drawableStartCompat="@drawable/ic_insert_comment_black_24dp" />

            <TextView
                android:id="@+id/txtTongHinhAnh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500"
                android:gravity="center"
                android:drawablePadding="@dimen/_3sdp"
                android:layout_margin="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                app:drawableStartCompat="@drawable/ic_photo_camera_black_24dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
